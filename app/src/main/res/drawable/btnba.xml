<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    tools:ignore="ExtraText">


    <corners android:radius="50dp"/>
    <gradient
        android:angle="45"

        android:centerX="35%"
        android:centerColor="@color/baby_pink"

        android:startColor="@color/cornflower_blue"
        android:endColor="@color/cornflower_blue"

        android:type="linear"
        />




    <padding
        android:bottom="0dp"

        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        />
    <size
        android:width="150dp"
        android:height="25dp"
        />
</shape>